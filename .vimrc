syntax on
set incsearch
set number
set nobackup
set smartindent
set nowrap
set mouse=a
set shiftwidth=4
set ruler

filetype indent on

" set line number colors
hi CursorLineNr cterm=bold ctermfg=Green ctermbg=NONE
" underline cursor line and mark line color Green
hi LineNr cterm=bold ctermfg=DarkGrey ctermbg=NONE




set bg=dark
color evening
